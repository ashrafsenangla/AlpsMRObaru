@model Core.Entities.Data.PartData.PartTransferIn
@using AspNetGroupBasedPermissions.Helpers
@{ ViewBag.Title = "Create Part Transfer In";}
@{
    Layout = "~/Views/Shared/_LayoutPopUp.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div id="addcocbox" class="row" style="width:auto;max-width:750px">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="panel-heading btn-primary modal-header">
                    <center class="panel-title" style="min-height:10px;">
                        <h4 style="font-weight:300">Part Receiving From Supplier</h4>
                    </center>
                </div>
                <div class="modal-body">
                    <table class="table table-condensed table-striped table-bordered">
                        <tr></tr>
                        <tr>
                        <tr>
                            <td>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })

                            </td>
                            <td>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })

                            </td>
                        </tr>

                        <td style="padding:13px;font-weight:700">Part Name</td>
                        <td>
                            @Html.DropDownList("PartID", ViewData["PartID"] as SelectList, "--Select Part--", htmlAttributes: new { @id = "plant", @class = "form-control", onchange = "FuncChange(this.value)", @required = "required", @style = "font-size:12px;height:30px;" })
                            @Html.HiddenFor(model => model.PartID)
                            @Html.ValidationMessageFor(model => model.PartID)
                        </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">Part No</td>
                            <td>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })

                            </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">Quantity</td>
                            <td>
                                @Html.EditorFor(model => model.Qty, new { htmlAttributes = new { @Value = "0", @class = "form-control", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.Qty)
                            </td>
                        </tr>
                        @*<tr>
                            <td style="padding:13px;font-weight:700">Business Unit(From) </td>
                            <td>
                                @Html.DropDownList("BUID", ViewData["BUID"] as SelectList, "--Select BU--", htmlAttributes: new { @id = "plant", @class = "form-control", onchange = "FuncChange(this.value)", @required = "required", @style = "font-size:12px;height:30px;" })
                                @Html.HiddenFor(model => model.BUID)
                                @Html.ValidationMessageFor(model => model.BUID)
                            </td>
                        </tr>*@
                        <tr>
                            <td style="padding:13px;font-weight:700">Drawer(Destination)</td>
                            <td>
                                @Html.DropDownList("CabinetID", ViewData["CabinetID"] as SelectList, "--Select Cabinet--", htmlAttributes: new { @id = "plant1", @class = "form-control", onchange = "FuncChange(this.value)", @required = "required", @style = "font-size:12px;height:30px;" })
                                @Html.HiddenFor(model => model.CabinetID)
                                @Html.ValidationMessageFor(model => model.CabinetID)
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">Description</td>
                            <td>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.Description)
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "IndexPartTransferIn", null, new { @class = "btn btn-white" })
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/dataPicker")

    <script type="text/javascript">


        $(document).ready(function () {

            $("#transactiondate").datepicker({
                todayBtn: "linked",
                format: "dd/mm/yyyy",
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true
            }).datepicker("setDate", new Date());
        });

    </script>
}
