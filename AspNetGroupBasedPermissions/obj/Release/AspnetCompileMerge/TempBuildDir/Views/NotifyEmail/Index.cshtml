@model IEnumerable<Core.Entities.Data.License.NotifyEmail>
@using AspNetGroupBasedPermissions.Helpers

@{
    ViewBag.Title = "Notify Email List";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
				  <div class="ibox-tools">
					<div class="ibox-tools">
						@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                 </div>
				</div>
                <div class="ibox-content">

<table class="table table-striped table-bordered table-hover dataTables-example">
   <thead><tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
              <th>
                  @Html.DisplayNameFor(model => model.GroupName)
              </th>
        <th></th>
    </tr>
	</thead>
	<tbody>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupName)
        </td>
 
        <td>
			@Html.EncodedActionLink("Details", "Details", "NotifyEmail", new { id = item.ID }, new { @class = "btn-primary" })
            @Html.EncodedActionLink("Edit", "Edit", "NotifyEmail", new { id = item.ID }, new { @class = "btn-white" })
            @Html.EncodedActionLink("Delete", "Delete", "NotifyEmail", new { id = item.ID }, new { @class = "btn-white" })
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>





@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

 @section Scripts {
            @Scripts.Render("~/plugins/dataTables")

  <script type="text/javascript">
        $(document).ready(function () {
            $('.dataTables-example').dataTable({
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../scripts/plugins/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });
        });
    </script>
	}

