@model Core.Entities.Data.Testing.MainTest

@{
    ViewBag.Title = "Edit";
}




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Edit MainTest</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.TitleCode, "TitleCode", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("TitleCode", String.Empty)*@
                @Html.DropDownList("TitleCode", ViewData["RTMTitle"] as SelectList, "-- Select Title --", htmlAttributes: new { @class = "form-control" })


                @Html.ValidationMessageFor(model => model.TitleCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.SecondTest.PositionCode, "PositionCode", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("PositionCode", String.Empty)*@
                @*@Html.DropDownList("PositionCode", ViewData["RTMPosition"] as SelectList, "-- Select Position --", htmlAttributes: new { @class = "form-control" })*@

                @Html.EditorFor(model => model.SecondTest.PositionCode)
                @Html.ValidationMessageFor(model => model.SecondTest.PositionCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SecondTest.ContactPerson, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SecondTest.ContactPerson)
                @Html.ValidationMessageFor(model => model.SecondTest.ContactPerson)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SecondTest.CompanyName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SecondTest.CompanyName)
                @Html.ValidationMessageFor(model => model.SecondTest.CompanyName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
				@Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}


                </div>
            </div>
        </div>
    </div>
 </div>



