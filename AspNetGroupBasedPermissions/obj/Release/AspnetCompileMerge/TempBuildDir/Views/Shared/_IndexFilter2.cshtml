

<div class="ibox-tools">
    @Html.ActionLink(" ", "Create", null, new { @class = "modal-link btn btn-white btn-xs glyphicon glyphicon-plus pull-right btn btn-xs btn-primary btn-block", @style = "background:#a7b1c2;padding-left:3px;padding-right:3px;padding-bottom:3px;padding-top:3px;width:29px;height:28px;" })
</div>

<div class="ibox-tools pull-left">
    <label style="padding-top:5px;">Filter By :</label>&nbsp;
</div>


<div class="ibox-tools pull-left">
    <select class="form-control input-sm" data-bind="options:availableBusinessUnit, value:selectedBusinessUnitName" style="font-size:12px"></select>&nbsp;
</div>

<div class="ibox-tools pull-left">
    <select data-bind="options:availableBranch, value:selectedBranchName" class="form-control input-xs" style="font-size:12px;height:30px"></select>&nbsp;
</div>

<div class="ibox-tools input-group date pull-left" style="padding-bottom:5px;">
    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
    <input class="form-control" style="max-height:30px;max-width:130px;font-size:12px;" id="StartDate" data-bind="value:selectedTransactionDate">
</div>


<div class="dataTables_length pull-right">
    <label>
        <select class="form-control input-sm" style="font-size:12px;" data-bind="value: pageSize">
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
    </label>
</div>

<div class="dataTables_filter">
    <label><input type="text" class="form-control input-sm pull-left" style="font-size:12px" data-bind="value: formVendorSearch, valueUpdate: 'keyup'" placeholder="Search">&nbsp;</label>
    <br style="margin-bottom:2px;" />
</div>

