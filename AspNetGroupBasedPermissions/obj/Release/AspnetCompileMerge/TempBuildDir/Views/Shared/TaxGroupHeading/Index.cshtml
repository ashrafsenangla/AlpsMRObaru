@model IEnumerable<Core.Entities.Data.RTMTables.TaxGroupHeading>
@using AspNetGroupBasedPermissions.Helpers

@{
    ViewBag.Title = "Index";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Tax Group Heading</h5>
                    <div class="ibox-tools">
                        <div class="ibox-tools">
                            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs" })
                        </div>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TaxGroup)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TaxGroupName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.DateCreated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateModified)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TaxGroup)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TaxGroupName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateCreated)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateModified)
                                    </td>

                                    <td>
                                        @Html.EncodedActionLink("Details", "Details", "TaxGroupHeading", new { id = item.ID }, new { @class = "btn-primary" })
                                        @Html.EncodedActionLink("Edit", "Edit", "TaxGroupHeading", new { id = item.ID }, new { @class = "btn-white" })
                                        @Html.EncodedActionLink("Delete", "Delete", "TaxGroupHeading", new { id = item.ID }, new { @class = "btn-white" })
                                    </td>
                                </tr>
                            }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {
            $('.dataTables-example').dataTable({
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../scripts/plugins/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });
        });
    </script>
}