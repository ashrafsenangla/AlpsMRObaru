@model AspNetGroupBasedPermissions.ViewModels.CompanyRelationModel<AspNetGroupBasedPermissions.ViewModels.RelationItemModel>

@{ ViewBag.Title = "Company Items"; }

<h2>Vendors for Company @Html.DisplayFor(model => model.CompanyCode)</h2>
<hr />
