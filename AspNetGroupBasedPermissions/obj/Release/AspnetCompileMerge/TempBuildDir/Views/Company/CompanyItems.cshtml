{
    @Html.AntiForgeryToken()
    <div >
        @Html.ValidationSummary(true)
        <div >
            <div >
                @Html.HiddenFor(model => model.CompanyCode)
            </div>
        </div>

        <div>
            <table>
                <tr>
                    <th>
                        Select
                    </th>
                    <th>
                        Items
                    </th>
                </tr>
                @Html.EditorFor(model => model.Models)


            </table>
            <div>
                @Html.ActionLink("Back to List", "Index", null,new { @class="btn-white"})
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
