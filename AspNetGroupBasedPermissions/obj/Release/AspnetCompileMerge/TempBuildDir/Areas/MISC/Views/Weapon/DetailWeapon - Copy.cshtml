                                            </div>
                                            <div class="row">
                                                @Html.LabelFor(model => model.Calibre, "Calibre", new { @class = "control-label col-sm-3" })
                                                <div class="col-md-8">
                                                    @Html.DropDownList("Calibre", (IEnumerable<SelectListItem>)Session[""], "", new { @class = "form-control", @required = "required", @style = "font-size:12px;height:30px;background-color: #edfcf9;" })
