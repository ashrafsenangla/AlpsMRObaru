                            </div>
                        </div>
                        <div class="col-md-offset-5 col-md-9">

                            @Html.ActionLink("Back To List", "IndexWeapon", null, new { @class = "btn btn-white" }, new { @class = "btn btn-xs btn-primary", @style = "border-color:steelblue;background-color:steelblue; color: white;" })
