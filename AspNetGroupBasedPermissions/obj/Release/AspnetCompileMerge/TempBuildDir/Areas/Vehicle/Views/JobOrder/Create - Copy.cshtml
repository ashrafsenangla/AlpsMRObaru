                                                <div class="col-md-8">
                                                    @Html.DropDownList("VendorID", (IEnumerable<SelectListItem>)Session["VendorID"], " < Select Workshop >", new { @class = "form-control", @required = "required", @style = "font-size:12px;height:30px;" })
