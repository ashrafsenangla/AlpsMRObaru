        Date.prototype.toFormattedDate = function () {
            var dd = this.getDate();
            if (dd < 10) dd = '0' + dd;
            var mm = this.getMonth() + 1;
            if (mm < 10) mm = '0' + mm;
            var yyyy = this.getFullYear();
            /* change format here */
            return String(dd + "/" + mm + "/" + yyyy);
        };

        var MSR = function (data) {
            var self = this;
            this.ID = ko.observable(data.Vehicle_No);
            this.BusinessUnitName = ko.observable(data.BusinessUnitName);
            this.BranchName = ko.observable(data.BranchName);
            this.Vehicle_No = ko.observable(data.Vehicle_No);
            this.JobOrderNo = ko.observable(data.JobOrderNo);
            this.JobOrderDate = ko.observable(data.JobOrderDate);
            this.EstimateCost = ko.observable(data.EstimateCost);
            this.JOStatus = ko.observable(data.JOStatus);
            this.DetailURL = ko.observable(data.DetailURL);
            this.JOPartURL = ko.observable(data.JOPartURL);
            this.ShowButton = ko.observable(data.ShowButton);
        };

        var ViewModel = new function () {
            var self = this;
            var defaultDropdownText = 'All';
          //  var defaultDropdownTextStatus = 'Draft';
         //   var defaultdate = new Date().toFormattedDate();
            self.pageSize = ko.observable(10);
            self.indexPage = ko.observable(0);
            self.totalPage = ko.observable(1);
            self.totalRow = ko.observable(0);
            self.hocs = ko.observableArray([]);
            self.formVendorSearch = ko.observable("");


           var defaultdate = new Date().toFormattedDate();
           self.availableBranch = ko.observableArray([defaultDropdownText,@foreach (var item in ViewBag.BranchDesc){<text>'@item',</text>}]);
           self.availableBusinessUnit = ko.observableArray([defaultDropdownText,@foreach (var item in ViewBag.BusinessUnitDesc){<text>'@item',</text>}]);
           self.availableVehicle = ko.observableArray([defaultDropdownText,@foreach (var item in ViewBag.VehicleDesc){<text>'@item',</text>}]);
           self.availableVendorName = ko.observableArray([defaultDropdownText,@foreach (var item in ViewBag.VendorDesc){<text>'@item',</text>}]);
             self.availableJOStatus = ko.observableArray([defaultDropdownText,@foreach (var item in ViewBag.JOStatus){<text>'@item',</text>}]);

            self.selectedBranchName = ko.observable(defaultDropdownText);
            self.selectedBusinessUnitName = ko.observable(defaultDropdownText);
            self.selectedVehicle = ko.observable(defaultDropdownText);
            self.selectedVendorName = ko.observable(defaultDropdownText);
           self.selectedJOStatus = ko.observable(defaultDropdownText);

            self.nextPage = function () {
                if ((self.indexPage() + 1) < self.totalPage()) {
                    self.indexPage(self.indexPage() + 1);
                    self.loadhoc();
                }
            }
            self.prevPage = function () {
                if (self.indexPage() > 0) {
                    self.indexPage(self.indexPage() - 1);
                    self.loadhoc();
                }
            }

            self.loadhoc = function () {
                self.hocs.removeAll();

                $.ajax('@Url.Action("GetJobOrder", "JobOrder")', {
                    data: ko.toJSON({
                        search: self.formVendorSearch(),
                        pageSize: self.pageSize(),
                        pageIndex: self.indexPage(),
                        businessunitname: self.selectedBusinessUnitName(),
                        branchname: self.selectedBranchName(),
                        vehicleno: self.selectedVehicle(),
                        vendorname : self.selectedVendorName(),
                        jostatus: self.selectedJOStatus,

                    }),
                    type: "post",
                    contentType: "application/json",
                    success: function (result) {
                        self.hocs.removeAll();
                        var underlyingArray = self.hocs();
                        for (var i = 0; i < result.hocs.length; i++) {
                            var row = result.hocs[i];
                            var record = {
                                ID: row.ID,
                                BusinessUnitName: row.BusinessUnitName,
                                BranchName: row.BranchName,
                                Vehicle_No: row.Vehicle_No,
                                JobOrderNo: row.JobOrderNo,
                                VendorName: row.VendorName,
                                JobOrderDate: row.JobOrderDate,
                                EstimateCost: row.EstimateCost,
                                JOStatus: row.JOStatus,
                                IsExpired: row.IsExpired,
                                DetailURL: row.DetailURL,
                                JOPartURL: row.JOPartURL,
                                ShowButton: row.ShowButton,
                            }
                            underlyingArray.push(record);
                        }
                        self.hocs.valueHasMutated();
                        self.totalPage(result.totalPage);
                        self.totalRow(result.totalRow);
                        $('#dialog-Loading').dialog("close");
                    },
                    error: function (error) {
                        $.notify(
                            error.responseText, {
                                position: "top center",
                                className: "error"
                            }
                        );
                        $('#dialog-Loading').dialog("close");
                    }
                });
            }

                self.restartSearchPagination = function () {
                self.hocs.removeAll();
                self.indexPage(0);
                self.totalPage(1);
                self.totalRow(0);
            }
            self.formVendorSearch.subscribe(function (value) {
                if (value == '') self.formVendorSearch("");

                self.restartSearchPagination();
                self.loadhoc();
            });
            self.pageSize.subscribe(function (value) {
                if (self.formVendorSearch() == '') self.formVendorSearch("");
                self.restartSearchPagination();
                self.loadhoc();
            });

            self.vendorsComputed = ko.computed(function () {
                var records = self.hocs;
                return records;
            });
            self.selectedBranchName.subscribe(function (value) {
                $('#dialog-Loading').dialog("open");
                self.restartSearchPagination();
                self.loadhoc();
            });
              self.selectedBusinessUnitName.subscribe(function (value) {
                $('#dialog-Loading').dialog("open");
                self.restartSearchPagination();
                self.loadhoc();
              });
               self.selectedVehicle.subscribe(function (value) {
                $('#dialog-Loading').dialog("open");
                self.restartSearchPagination();
                self.loadhoc();
               });
             self.selectedVendorName.subscribe(function (value) {
                $('#dialog-Loading').dialog("open");
                self.restartSearchPagination();
                self.loadhoc();
               });
            self.loadhoc();

    };

