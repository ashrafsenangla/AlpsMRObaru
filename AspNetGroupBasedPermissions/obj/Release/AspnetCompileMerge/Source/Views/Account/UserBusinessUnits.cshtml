@model AspNetGroupBasedPermissions.Models.SelectUserBusinessUnitsViewModel
@{ ViewBag.Title = "User Business Unit"; }

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    @using (Html.BeginForm("UserBusinessUnits", "Account", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.HiddenFor(model => model.UserName)
                                </div>
                            </div>
                            <h4>Blank</h4>
                            <br />


                            <div class="col-md-12" style="margin-bottom:20px;">
                                <label class="col-md-6">List Of Business Unit For User : @Html.DisplayFor(model => model.FirstName) <span> </span>@Html.DisplayFor(model => model.LastName)</label>
                            </div>
                            @*<input hidden data-bind="value:selectedCostCenter().key" name="CompanyCode">*@
                            <table id="mainTable" class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>
                                            Select
                                        </th>
                                        <th>
                                            Business Unit
                                        </th>
                                    </tr>
                                </thead>
                                @Html.EditorFor(model => model.BusinessUnits)
                            </table>
                            <br />
                            <hr />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    @Html.ActionLink("Back To List", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
