@model IEnumerable<Core.Entities.Data.Vendor.VendorApplication>
@using AspNetGroupBasedPermissions.Helpers

@{
    ViewBag.Title = "Index";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Vendor Registration</h5>
                    <div class="ibox-tools">
                        <div class="ibox-tools">
                            @*@Html.ActionLink("Create New", "CreateMaster", null, new { @class = "btn btn-primary btn-xs" })*@
                        </div>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CompanyName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ContactPerson)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MobileNumber1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PhoneNumber1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Website)
                                </th>


                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactPerson)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MobileNumber1)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber1)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Website)
                                    </td>

                                    <td>
                                        @*@Html.EncodedActionLink("Details", "DetailsMaster", "VendorApplication", new { id = item.ID }, new { @class = "btn-primary" })*@
                                        @Html.EncodedActionLink("View", "VerifyRegistrationNew", "VendorApplication", new { id = item.ID }, new { @class = "btn-primary" })
                                        @*@Html.EncodedActionLink("Delete", "DeleteMaster", "VendorApplication", new { id = item.ID }, new { @class = "btn-white" })*@
                                    </td>
                                </tr>
                            }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>





@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {
            $('.dataTables-example').dataTable({
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../scripts/plugins/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });
        });
    </script>
}

