@model AspNetGroupBasedPermissions.Areas.QHSE.Models.HazardCategoryDetails
@using AspNetGroupBasedPermissions.Helpers

@{
    ViewBag.Title = "Details_cat";
}

<div class="wrapper wrapper-content animated fadeInRight">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Details of Hazard Category</h5>
                        </div>
                        <div class="ibox-content">

                            <div class="wellDetail" >
                                <div class="circle-border">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.HazardCatName, "Hazard Category Name", new { @class = "control-label col-md-5" })
                                            <div class="col-md-7 m-b-xs">
                                                @Html.DisplayFor(model => model.HazardCatName)

                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.IsActiveHaz, "Is Active" , new { @class = "control-label col-md-5" })
                                            <div class="col-md-7 m-b-xs">
                                                @Html.DisplayFor(model => model.IsActiveHaz)

                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>

                            <div class="col-lg-12"></div>


                            <table class="table table-striped table-bordered table-hover dataTables-example">

                                <thead style="background-color: #EFF1FB; text-align:center;">
                                    <tr>
                                        <th>
                                            @Html.DisplayName("Sub Category Name")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Default TOFs?")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Default Stop Works?")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Is Active")
                                        </th>
                                  


                                    </tr>
                                </thead>

                                <tbody>
                         
                                    @foreach (var hazardCategorySub in (ViewBag.HazardCategoryDetails))
                                    {

                                        <tr>
                                            <td>@hazardCategorySub.SubCategoryName</td>
                                            <td><input type="checkbox" checked="@hazardCategorySub.DefaultTOFs" disabled="disabled" /> </td>
                                            <td><input type="checkbox" checked="@hazardCategorySub.DefaultStopWorks" disabled="disabled" /> </td>
                                            <td><input type="checkbox" checked="@hazardCategorySub.IsActive" disabled="disabled" /> </td>
                                        </tr>
                                    }


                                </tbody>


                            </table>


                            @Html.EncodedActionLink("Edit", "Edit", "HazardCategories", new { id = Model.ID }, new { @class = "btn-primary" })
                            @Html.ActionLink("Back to List", "Index", null, new { id = Model.ID }, new { @class = "btn-white" })

                        </div>
                    </div>
                </div>
            </div>
        </div>


    }
</div>



@section Styles {
    @Styles.Render("~/Scripts/plugins/jquery-ui/jqueryuiStyles")
    <style>
   

        .wellDetail {
            min-height: 70px;
            padding: 14px;
            margin-bottom: 3px;
            background-color: #EFF1FB;
            border: 1px solid #e3e3e3;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
            box-shadow: inset 0 1px 1px rgba(0,0,0,.05 );
        }

       
    </style>
}



