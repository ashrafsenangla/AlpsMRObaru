
@{
    Layout = null;
}
<center>

    <h3 style="padding-bottom:30px" >Forgot Password</h3>

    @using (Html.BeginForm())
    {
<div class="form-horizontal" style="width:auto;padding-bottom:50px">
    <hr />
    <div class="text-success">
        @ViewBag.Message
    </div>
    <div class="form-group">
        <div class="col-md-10" style="padding-bottom:30px">
            <label class="control-label col-md-2">Enter Your Email Address</label>
            @Html.TextBox("EmailID", "", new { @class = "form-control" })
            <input type="submit" value="Submit" class="btn btn-success" />
        </div>
    </div>
    <hr />
</div>
    }

</center>
