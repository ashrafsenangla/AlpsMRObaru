@model AspNetGroupBasedPermissions.Models.SelectUserCabinetsViewModel
@{ ViewBag.Title = "User Cabinet"; }

@{
    Layout = "~/Views/Shared/_LayoutPopUp.cshtml";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">

                        @using (Html.BeginForm("UserCabinets", "Account", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.HiddenFor(model => model.UserName)
                                </div>
                            </div>
                            <div class="col-md-12" style="padding-left:10px;margin-bottom:20px;">
                                <center>
                                    <label class="col-md-6">List Of Company For User : @Html.DisplayFor(model => model.FirstName) </label>
                                </center>
                            </div>
                            <input hidden data-bind="value:selectedCostCenter().key" name="CompanyCode">
                            <div class="modal-body">
                                <table id="mainTable" class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th style="width:10%">
                                                Select
                                            </th>
                                            <th style="width:90%">
                                                Cabinet Name
                                            </th>
                                        </tr>
                                    </thead>
                                    @Html.EditorFor(model => model.Cabinets)
                                </table>
                            </div>
                            <div>
                                <center>
                                    <div>
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                        @Html.ActionLink("Back To List", "IndexUser", null, new { @class = "btn btn-white" })
                                    </div>
                                </center>
                            </div>
                        }

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>