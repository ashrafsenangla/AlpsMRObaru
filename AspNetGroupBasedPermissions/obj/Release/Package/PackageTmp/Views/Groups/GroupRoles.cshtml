@model Core.Entities.Data.SelectGroupRolesViewModel
@{ ViewBag.Title = "Group Role Permissions"; }


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">

                    @using (Html.BeginForm("GroupRoles", "Groups", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.HiddenFor(model => model.GroupName)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.HiddenFor(model => model.GroupId)
                                </div>
                            </div>
                            <h4>Select Role Permissions For Group : @Html.DisplayFor(model => model.GroupName)</h4>
                            @*<br />
                            <hr />*@
                            <table>
                                <tr>
                                    <th>
                                        Select  -
                                    </th>                                   
                                    <th>
                                        Permissions
                                    </th>
                                </tr>
                                @Html.EditorFor(model => model.Roles)
                            </table>
                            <br />
                            <hr />

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    @Html.ActionLink("Back To List", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>

                        </div>
                    }
                </div>
                </div>
            </div>
        </div>
    </div>

