@model Core.Entities.Data.PartData.BusinessUnit
@using AspNetGroupBasedPermissions.Helpers
@{ ViewBag.Title = "Edit Business Unit";}
@{
    Layout = "~/Views/Shared/_LayoutPopUp.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.BUID)

    <div id="mainbox" class="row">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="panel-heading btn-primary modal-header">
                    <center class="panel-title" style="min-height:10px;">
                        <h4 style="font-weight:300">Edit Business Unit</h4>
                    </center>
                </div>
                <div class="modal-body">
                    <table class="table table-condensed table-striped table-bordered">
                        <tr></tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">BUnit ID</td>
                            <td>
                                @Html.EditorFor(model => model.BUID, new { htmlAttributes = new { @id = "recid", @class = "form-control", @disabled = "true", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.BUID)
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">Business Unit Name</td>
                            <td>
                                @Html.EditorFor(model => model.BusinessUnitName, new { htmlAttributes = new { @class = "form-control", @maxlength = 30, @required = "required", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.BusinessUnitName)
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">Description</td>
                            <td>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @maxlength = 300, @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.Description)
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">Is Active?</td>
                            <td>
                                @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @style = "font-size:11px;height:18px;color:black", } })
                                @Html.ValidationMessageFor(model => model.IsActive)
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">Status</td>
                            <td>
                                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @disabled = "true", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.Status)
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        @Html.ActionLink("Cancel", "IndexBusinessUnit", null, new { @class = "btn btn-white" })
                    </div>
                </div>

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/dataPicker")

    <script type="text/javascript">

        $(document).ready(function () {

            $("#transactiondate").datepicker({
                todayBtn: "linked",
                format: "dd/mm/yyyy",
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true
            }).datepicker("setDate", new Date());


        });

    </script>
}
