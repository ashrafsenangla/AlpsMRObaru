@model AspNetGroupBasedPermissions.Models.RegisterViewModel
@using AspNetGroupBasedPermissions.Helpers
@{
    Layout = "~/Views/Shared/_LayoutPopUp.cshtml";
}
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("CreateUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
   
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="panel-heading btn-primary modal-header">
                    <center class="panel-title" style="min-height:10px;">
                        <h4 style="font-weight:300">Create New User</h4>
                    </center>
                </div>
                <div class="modal-body">
                    <table class="table table-condensed table-striped table-bordered">
                        <tr></tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">User ID</td>
                            <td>
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.UserName)
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">Name</td>
                            <td>
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.FirstName)
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">Password</td>
                            <td>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.Password)
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">Confirm Password</td>
                            <td>
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </td>
                        </tr>
                        <tr>
                            <td style="padding:13px;font-weight:700">User Email</td>
                            <td>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "font-size:11px;height:28px;color:black;font-size:11px", } })
                                @Html.ValidationMessageFor(model => model.Email)
                            </td>
                        </tr>
                        @*<tr>
                                <td style="padding:13px;font-weight:700">Password Type</td>
                                <td>
                                    @Html.DropDownList("LoginType", ViewData["LoginType"] as SelectList, htmlAttributes: new { @id = "logintype", @class = "form-control", @required = "required", @style = "font-size:12px;height:30px;" })
                                    @Html.ValidationMessageFor(model => model.LoginType)
                                </td>
                            </tr>*@
                    </table>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Register" class="btn btn-primary" />
                            @Html.ActionLink("Cancel", "IndexUser", null, new { @class = "btn btn-white" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
  

}

